<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_user"
    android:clickable="true"
    android:padding="@dimen/padding_large">

    <!--头像-->
    <ImageView
        android:id="@+id/iv_avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_width" />

    <!--昵称-->
    <TextView
        android:text="这是昵称"
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"
        android:textColor="@color/text" />

    <!--描述
    lines:最多显示几行
    ellipsize="end"：超出的部分显示省略号-->
    <TextView
        android:layout_marginTop="@dimen/padding_meddle"
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是描述这是这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述这是描述"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/text_small"
        android:lines="2"
        android:ellipsize="end" />
</LinearLayout>