<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--登录，注册界面输入框样式-->
    <style name="EditText">
        <!--图标到内容的间距-->
        <item name="android:drawablePadding">@dimen/padding_meddle</item>

        <!--左侧图标-->
        <item name="android:drawableLeft">@drawable/ic_phone</item>

        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>

        <!--最大显示一行-->
        <item name="android:lines">1</item>

        <!--<item name="android:layout_marginTop">@dimen/padding_meddle</item>-->

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">@drawable/selector_edit_text</item>
    </style>

    <!--状态栏透明-->
    <style name="Theme.MyCloudMusicAndroidJava.NoActionBar.StatusBarTransparent">
    </style>

    <!--侧滑界面Item容器-->
    <style name="ItemContainer">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>

        <!--可点击-->
        <item name="android:clickable">true</item>

        <!--左侧padding-->
        <item name="android:paddingLeft">@dimen/padding_large</item>

        <!--右侧padding-->
        <item name="android:paddingRight">@dimen/padding_large</item>

        <!--内容垂直居中-->
        <item name="android:gravity">center_vertical</item>

        <!--内容方向为水平-->
        <item name="android:orientation">horizontal</item>
    </style>

    <!--图标-->
    <style name="ItemIcon">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--侧滑界面Item文本-->
    <style name="ItemText">
        <!--左侧margin-->
        <item name="android:layout_marginLeft">@dimen/padding_meddle</item>

        <!--文本颜色-->
        <item name="android:textColor">@color/text</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <!--侧滑界面Item值-->
    <style name="ItemTextHint">
        <!--文本颜色-->
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>